<!DOCTYPE html>
<html>
	<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
    <title>BikeShop - Home</title>
    </head>
    <body>
        
        <div class="container-fluid">

            <!-- HEADER -->
            <div class="row">

                <nav class=" header col-12 navbar navbar-light bg-dark">
                    <a class="navbar" href="/">
                    <img class="mx-3"  src="images/bicycle.png" width="50" height="50" class="logo" alt="">
                    The Bike Shop Experience
                    </a>

                      <a type="button" href="/shop" class="btn btn-warning position-relative me-5">
                        <i class="fas fa-shopping-basket"></i>
                        Basket
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        <% let totalShop = 0 %>
                        <% panier.forEach(bike => { %>
                          <% totalShop += Number(bike.quantity) %>
                        <% }); %>
                        <%= totalShop %>
                        </span>
                    </a>
                </nav>

            </div>  

            <!-- JUMBOTRON -->
            <div class="row">

                <div class="col-12 jumbotron jumbotron-fluid">
                    <div class="container">
                    </div>
                </div>
            </div>
            
            <!-- card carousel -->
            <div class="row d-flex justify-content-center mt-3">
            <div class="col-10 col-md-6">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="card text-center">
                        <div class="card-header bg-info text-white ">
                            <h3>En ce moment!</h3>
                        </div>
                        <div class="carousel-inner">
                            <% dataBike.forEach((bike, index) => { %>   
                            <% if(bike.mea === true) { %>
                          <div class="carousel-item <%= index == 0 ? "active" : "" %>">
                              <img src="<%= bike.url %>" class="d-block w-100">
                              <div class="card-body">
                                <h5 class="card-title"><%= bike.name %></h5>
                                <h5 class="card-title"><%= bike.price %> €</h5>  
                                <a href="/shop?bikeNameFromFront=<%= bike.name%>&bikePriceFromFront=<%= bike.price%>&bikeImageFromFront=<%= bike.url%>" id="mea-btn" class="btn btn-lg btn-info">Buy Now!</a>
                              </div>
                          </div>
                <% } %>
                <% }); %> 
            </div>
        </div>
    </div>
              </div>    
              </div>
              <!-- end -->


            <div class="row">
                <% 
                for(var i=0;i<dataBike.length;i++){
                %>
                    <div class="col-12 col-md-6 col-lg-4 my-3">
                        <div class="card p-1 h-100 shadow p-3 mb-5 bg-white rounded">
                            <img src=<%= dataBike[i].url%> class="card-img-top">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= dataBike[i].name%></h5>
                                <%= dataBike[i].price%>€
                                <a href="/shop?bikeNameFromFront=<%= dataBike[i].name%>&bikePriceFromFront=<%= dataBike[i].price%>&bikeImageFromFront=<%= dataBike[i].url%>" class="btn btn-outline-info btn-sm">Buy</a>
                            </div>
                        </div>
                    </div>


                <%
                }
                %>
                
                
            </div>
            
        </div>
        


        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
