<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque&display=swap" rel="stylesheet">

        <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
        <title>BikeShop - Shop</title>
    </head>

    <body>


            <!-- HEADER -->
                <nav class=" header navbar navbar-expand-lg navbar-light bg-dark">
                    <div class="container-fluid">
                    <a class="navbar" href="/">
                    <img class="mx-3"  src="images/bicycle.png" width="50" height="50" class="logo" alt="">
                    The Bike Shop Experience
                    </a>
                    <form class="form-inline my-2 my-lg-0">
                        <a class="btn btn-warning mx-3 my-2 my-sm-0" href="/" type="submit">
                            <i class="fas fa-angle-double-left"></i>
                            Back
                        </a>
                    </form>
                </nav>  
            <div class="container-fluid">
                <div class="row ariane">
                    <nav aria-label="breadcrumb" class="col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Shop</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Basket</li>
                        </ol>
                    </nav>
                </div>
                <h1>Basket</h1>
            </div>


                <% if(dataCardBike.length === 0) { %>
                    <div class="container-fluid">
                        <h4 class="text-danger">No article in the basket</h4>
                    </div>
                <% } else { %>
                <div class="container-fluid">
                <div class="row">                
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Picture</th>
                        <th scope="col">Model</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Total</th>
                        <th scope="col">Suppr</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% 
                        let totalFrais = 0;
                        var totalCmd = 0;
                        let message = "";
                        for(var i=0;i<dataCardBike.length;i++){
                        %>
                            <tr class="basket-item">
                                <th scope="row"><%=i%></th>
                                <td><img src=<%= dataCardBike[i].url %> class="basket-img"></td>
                                <td>
                                    <%= dataCardBike[i].name %>
                                </td>
                                <td>
                                    <form action="/update-shop" method="POST">
                                        <input type="hidden" name="position" value="<%=i%>">
                                        <input type="number" name="quantity" value="<%= dataCardBike[i].quantity%>">
                                        <button type="submit" class="btn btn-outline-info btn-sm" name="button"><i class="fas fa-sync-alt"></i></button>
                                    </form>
                                </td>
                                <td><%= dataCardBike[i].price %>€</td>
                                <td><%= dataCardBike[i].price * dataCardBike[i].quantity %>€</td>
                                <td><a href="/delete-shop?position=<%=i%>"><button class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></button></a></td>
                            </tr>
                        <%
                            totalCmd += dataCardBike[i].price * dataCardBike[i].quantity;
                            
                            if(totalCmd < 2000) {
                                totalFrais += dataCardBike[i].quantity * 30;
                            }
                            if (totalCmd > 2000) {
                               totalFrais += dataCardBike[i].quantity * 30;
                               console.log(totalFrais);
                                totalFrais = totalFrais / 2;
                                message = "50% de réduction"
                            } 
                            if (totalCmd > 4000) {
                                totalFrais = 0;
                                message = "Frais de port offerts"
                            }
                        }
                        %>
                        
                      <tr>
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="total-box">Total Basket : </td>
                        <td><%= totalCmd %>€</td>
                        <td></td>
                      </tr>

                      <tr>
                        <th scope="row"></th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td class="total-box">Frais de port : </td>
                        <td><%= totalFrais %>€</td>
                        <td><%= message %></td>
                      </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-12 text-right">
                    <form action="/create-checkout-session" method="POST">
                        <input name="frais" type="hidden" value="<%= totalFrais %>">
                        <button class="btn btn-outline-info btn-sm btn-checkout" name="button-checkout" type="submit">Checkout</button>
                    </form>
                </div>
            </div>
        </div>
            <% } %> 
        
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    </body>
</html>
